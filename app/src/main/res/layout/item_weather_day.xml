<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="70dp"
    >

    <TextView
        android:id="@+id/tv_weather_item_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="24dp"
        android:text="@string/default_week"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/img_weather_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="121dp"
        app:srcCompat="@drawable/weather_0"

        />

    <TextView
        android:id="@+id/tv_weather_item_temperature_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="41dp"
        android:text="@string/default_item_temperature"
        android:textSize="17sp"

        />

</LinearLayout>
